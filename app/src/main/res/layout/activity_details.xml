<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="7dp"
    tools:context="com.example.omar.moviedirectory.Activites.DetailsActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/movieImage"
                android:layout_width="90dp"
                android:scaleType="fitXY"
                android:layout_height="96dp"
                android:background="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie Title"
                android:layout_toRightOf="@id/movieImage"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/movieRelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Released "
                android:layout_toRightOf="@id/movieImage"
                android:paddingLeft="5dp"
                android:textSize="13sp"
                android:layout_below="@+id/movieTitle"
                android:layout_centerHorizontal="true"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/movieCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category "
                android:layout_toRightOf="@id/movieImage"
                android:paddingLeft="5dp"
                android:textSize="13sp"
                android:layout_below="@+id/movieRelease"
                android:layout_centerHorizontal="true"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/movieRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating "
                android:layout_toRightOf="@+id/movieImage"
                android:paddingLeft="5dp"
                android:textSize="13sp"
                android:layout_below="@+id/movieCat"
                android:layout_centerHorizontal="true"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/runTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Runtime "
                android:layout_toRightOf="@+id/movieImage"
                android:paddingLeft="5dp"
                android:textSize="13sp"
                android:layout_below="@+id/movieRate"
                android:layout_centerHorizontal="true"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/auther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Directed By: "
                android:paddingLeft="5dp"
                android:textSize="20sp"
                android:layout_below="@+id/movieImage"
                android:layout_marginTop="12dp"
                android:textStyle="bold"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
        android:layout_marginTop="8dp"
       android:id="@+id/actors"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Actors:"
       android:textSize="15sp"
       android:layout_marginLeft="7dp"
       />
       <TextView
           android:layout_marginTop="8dp"
           android:id="@+id/writer"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Writers:"
           android:textSize="15sp"
           android:layout_marginLeft="7dp"
           />
       <TextView
           android:layout_marginTop="8dp"
           android:id="@+id/plot"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Plot:"
           android:textSize="15sp"
           android:layout_marginLeft="7dp"
           />
       <TextView
           android:layout_marginTop="8dp"
           android:id="@+id/boxOffice"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Box Office:"
           android:textSize="15sp"
           android:layout_marginLeft="7dp"
           />

   </LinearLayout>
</LinearLayout>
